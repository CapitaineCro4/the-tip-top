{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "no-undef": "off"
  },
  "globals": {
    "__dirname": "readonly",
    "process": "readonly",
    "module": "readonly",
    "require": "readonly",
    "exports": "readonly"
  },
  "overrides": [
    {
      "files": ["*.cjs"],
      "parserOptions": {
        "sourceType": "commonjs"
      }
    }
  ]
}
